<!-- Plantilla de la página -->


<!-- Frontmatter -->
---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';
const {pageTitle} = Astro.props; /* para recibir un título de página a través de Astro.props, constante definida en la página index.astro */
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" sizes="64x64" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <ViewTransitions />  <!-- agrego el componente de enrutamiento dentro del elemento <head>. -->
  </head>
  <body>
    <Header />
    <h1 transition:animate="slide">{pageTitle}</h1> <!-- hago que los títulos de las páginas se deslicen en lugar de desvanecerse -->
    <slot /> <!-- Incluirá el contenido envuelto en el layout  -->
    <Footer />
    <script>
      import "../sripts/menu";
    </script>
  </body>
</html>